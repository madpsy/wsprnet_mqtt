# Docker Compose Environment Variables
# Copy this file to .env and customize as needed

# Timezone for all containers
TZ=UTC

# Port mappings (change if you have conflicts)
KIWI_WSPR_PORT=8080
WSPRNET_MQTT_PORT=9009
MOSQUITTO_MQTT_PORT=1883
MOSQUITTO_WS_PORT=9001

# Admin password for wsprnet-mqtt web interface (optional)
# Leave empty to disable admin access
ADMIN_PASSWORD=

# Container restart policy
# Options: no, always, on-failure, unless-stopped
RESTART_POLICY=unless-stopped
